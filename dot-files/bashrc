function copr {
  local -r pr="$1"
  local -r branch="$2"

  if [[ -z $pr ]] || [[ -z $branch ]]; then
    cat << DONE >&2
Usage: $(basename "$0") pr-num checkout-branch

pr-num          - The number of the pr
checkout-branch - The branch you wish to check out to
DONE
    return 1
  fi
  git fetch elastic "pull/$pr/head:$branch" && \
  git checkout "$branch"
}

if [[ -f ~/.secrets ]]; then
  source ~/.secrets
fi

